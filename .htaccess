RewriteEngine On
RewriteBase /

# Don't rewrite if the request is for an existing file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Custom URL pattern: /technique/12-armbar â†’ pages/view.php?id=12&slug=armbar
RewriteRule ^technique/([0-9]+)-([a-z0-9-]+)$ pages/view.php?id=$1&slug=$2 [L,QSA]
